<p id="notice"><%= notice %></p>

<div class="name">
  <strong>Name:</strong>
  <%= @character.name %>
</div>

<p>
  <strong>Level:</strong>
  <%= @character.level %>
</p>

<p>
  <strong>Race:</strong>
  <%= @character.race %>
</p>

<p>
	<strong>Job:</strong>
	<%= @character.job %>
</p>

<p>
  <strong>Initiative:</strong>
  <%= @character.init %>
</p>

<p>
  <strong>Armor Class:</strong>
  <%= @character.ac %>
</p>

<p>
  <strong>Speed:</strong>
  <%= @character.speed %>
</p>

<p>
	<strong><%= @character.name %>'s Stuff</strong><br>
  <ul>
  <% @character.equips.each do |equip| %>
	 <li><%= equip.name %><br> 
    <% if equip.qty != nil %>Qty: <%= equip.qty %>
    <% else %>Qty: 1<% end %>
    | 
	 <%= equip.desc %></li>
	<% end %>
  </ul>
</p>
<%= link_to 'Give Equipment', new_equip_path %><br />
<%= link_to 'Edit', edit_character_path(@character) %> |
<%= link_to 'Back', characters_path %>
